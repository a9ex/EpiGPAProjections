{
    "manifest_version": 2,
    "name": "Epitech G.P.A Projections",
    "version": "1.0.3",
    "description": "Project your G.P.A on your past and next modules to see how many G.P.A you could have obtained (if you hadn't choke your module)!",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "*://intra.epitech.eu/*",
        "cookies"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://intra.epitech.eu/*"
            ],
            "js": [
                "inject.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background/service_worker.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{e33dfeb5-43e9-4289-a029-d42507595064}"
        }
    }
}